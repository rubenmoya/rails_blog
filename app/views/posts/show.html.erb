<div class="post">
  <h1 class="post__title">
    <%= @post.title %>
  </h1>
  <p class="post__date">
    Subbmite <%= time_ago_in_words(@post.created_at) %> ago
    | <%= link_to 'Edit', edit_post_path(@post) %>
    | <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
  <div class="post__body">
    <%= @post.body %>
  </div>
</div>
