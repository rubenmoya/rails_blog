<div class="comment clearfix">
  <div class="comment__content">
    <p class="comment__name"><strong><%= comment.name %></strong></p>
    <p class="comment__body"><%= comment.body %></p>
    <p class="comment__time"><%= time_ago_in_words(comment.created_at) %> ago</p>
  </div>
  <%= link_to "Delete", [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn--right" %>
</div>
